                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:text="ini total barang" />

                <TextView
                    android:id="@+id/tv_apotek_name"
                    android:layout_width="match_parent"
