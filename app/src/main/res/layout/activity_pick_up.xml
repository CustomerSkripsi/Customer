                    <!--android:layout_height="100dp"-->
                    <!--android:background="#000"-->
                    <!--android:layout_centerInParent="true"/>-->
                    <!--</RelativeLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvApotek"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Kami tunggu kehadiran Anda di di Apotek Kami" />

                    <TextView
                        android:id="@+id/tv_apotek_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:text="ini jalan" />

                    <TextView
                        android:id="@+id/tv_apotek_noTlp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:text="ini no tlp" />

                    <TextView
                        android:id="@+id/tv_apotek_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
